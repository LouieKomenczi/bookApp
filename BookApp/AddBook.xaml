<Window x:Class="BookApp.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookApp"
        mc:Ignorable="d"
        Title="AddBook" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="tbxTitle" HorizontalAlignment="Left" Height="39" Margin="111,94,0,0" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top" Width="302"/>
        <TextBox x:Name="tbxAuthor" HorizontalAlignment="Left" Height="35" Margin="111,190,0,0" TextWrapping="Wrap" Text="Author" VerticalAlignment="Top" Width="302"/>
        <Button x:Name="btnAddBook" Content="Add Book" HorizontalAlignment="Left" Margin="550,94,0,0" VerticalAlignment="Top" Width="89" Height="69" Click="BtnAddBook_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="550,229,0,0" VerticalAlignment="Top" Width="89" Height="35" Click="BtnCancel_Click"/>
        <ComboBox x:Name="cbxGenre" HorizontalAlignment="Left" Margin="111,268,0,0" VerticalAlignment="Top" Width="302" Height="36"/>

    </Grid>
</Window>
